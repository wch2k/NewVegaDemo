<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/bottombar_placeacall_fragment_favoriteImageButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_favorite"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/bottombar_placeacall_fragment_historyImageButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_recentcalls"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/bottombar_placeacall_fragment_contactImageButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_contacts"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <ImageButton
        android:id="@+id/bottombar_placeacall_fragment_keypadImageButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_keypad"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>