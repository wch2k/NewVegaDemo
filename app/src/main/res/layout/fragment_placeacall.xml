<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_placeacall_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polycom.vega.prototype.PlaceACallFragment">

    <LinearLayout
        android:id="@+id/fragment_placeacall_maincontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>

    <include
        android:id="@+id/bottombar_placeacall_fragment"
        layout="@layout/bottombar_placeacall_fragment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"></include>

</RelativeLayout>